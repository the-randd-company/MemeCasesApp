modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MemeCases Web Server"

[[workflows.workflow]]
name = "MemeCases Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0 WDS_SOCKET_HOST=0.0.0.0 npx expo start --web --port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 44031
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "serve", "dist", "-p", "5000"]
build = ["npx", "expo", "export", "--platform", "web"]
